{
  "Rules": [
    {
      "Name": "SecurityHubToSIEM",
      "EventPattern": {
        "source": ["aws.securityhub"],
        "detail-type": ["Security Hub Findings - Imported"]
      },
      "State": "ENABLED",
      "Targets": [
        {
          "Id": "SIEMLambda",
          "Arn": "arn:aws:lambda:us-east-1:ACCOUNT_ID:function:siem-security-processor"
        }
      ]
    },
    {
      "Name": "GuardDutyToSIEM",
      "EventPattern": {
        "source": ["aws.guardduty"],
        "detail-type": ["GuardDuty Finding"]
      },
      "State": "ENABLED",
      "Targets": [
        {
          "Id": "SIEMLambda",
          "Arn": "arn:aws:lambda:us-east-1:ACCOUNT_ID:function:siem-security-processor"
        }
      ]
    }
  ]
}